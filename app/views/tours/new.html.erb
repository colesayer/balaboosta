<%= form_for Tour.new do |f| %>

  <%= f.label "Location:" %>
  <br>
  <%= f.collection_select :location_id, Location.all, :id, :name, {:prompt => true} %>
  <br>

  <%= f.label "Date:" %>
  <br>
  <%= f.text_field :date %>
  <br>

  <%= f.label "Start Time:" %>
  <br>
  <%= f.text_field :start_time %>
  <br>

  <%= f.label "Base Price:" %>
  <br>
  <%= f.number_field :base_price, value: number_to_currency(f.object.base_price), step: :any %>
  <br>
  <br>
  <%= f.submit %>

<% end %>
