
  <div class="form-group">
    <%= f.label "Location:" %>
    <%= f.collection_select :location_id, Location.all, :id, :name, {:prompt => true}, class: 'form-control', :required => true %>
  </div>

  <div class="form-group">
    <%= f.label "Tourguide:" %>
    <%=f.collection_select :user_ids, @users, :id, :formatted_name, {:prompt => true}, class: 'form-control', :required => true %>
  </div>

  <div class="form-group">
    <%= f.label "Date:" %>
    <%= f.date_field :start_time_date, as: :string, class: 'form-control datepicker', required: true  %>
  </div>

  <div class="form-group">
    <%= f.label "Start Time:" %>
    <%= f.time_field :start_time_time, required: true, as: :time, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label "Base Price:" %>
    <div class="input-group">
      <div class="input-group-prepend">
       <div class="input-group-text">$</div>
      </div>
      <%= f.number_field :base_price, required: true, value: number_to_currency(f.object.base_price), step: :any, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <div class="checkbox-inline">
      <%= f.label 'Private:', class: 'checkbox-label'%>
      <%= f.check_box :is_private %>
    </div>
  </div>

  <%= f.submit class: 'btn btn-primary'%>
